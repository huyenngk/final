<div class="row">
    <div class="col-sm-8">

        <h1><%= @restaurant[:name] %></h1>

        <p><%= @restaurant[:description] %></p>

        <h3>Popular dishes</h3>

        <p><%= @restaurant[:popular_dishes] %></p>
        
        <!-- Hardcoded Data -->

    

        <% for review in @reviews %>
            <div class="media">
                <% if review[:enjoying] %>
                    <i class="fas fa-thumbs-up fa-3x mr-3"></i>
                <% else %>
                    <i class="fas fa-thumbs-down fa-3x mr-3"></i>
                <% end %>
                <div class="media-body">
                    <h5 class="mt-0">Kate</h5>
                    <%= review[:reviews] %>
                </div>
            </div>
        <% end %>

    

        <div class="mt-5">
            <a href="/restaurants/<%= @restaurant[:id] %>/reviews/new" class="btn btn-dark">Add your review</a>
        </div>
    </div>

    <div class="col-sm-4">
        <h3>Location</h3>
        <p><%= @restaurant[:location] %></p>
        <h3>Phone</h3>
        <p><%= @restaurant[:phone] %></p>
        <h3>Total Likes</h3>
        <p><%= @like_count %></p>
    </div>
</div>
