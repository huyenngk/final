<div class="row">
    <div class="col-sm-8">

        <h1><%= @restaurant[:name] %></h1>

        <p><%= @restaurant[:description] %></p>

        <h3>Popular dishes</h3>

        <p><%= @restaurant[:popular_dishes] %></p>
        
        <!-- Hardcoded Data -->

        <div class="media">
            <i class="fas fa-thumbs-up fa-3x"></i>
            <div class="media-body ml-5">
                <h5 class="mt-0">Brian</h5>
                Wouldn't miss it!
            </div>
        </div>

        <div class="media mt-3">
            <i class="fas fa-thumbs-down fa-3x"></i>
            <div class="media-body ml-5">
                <h5 class="mt-0">Ben</h5>
                Nope, I only eat Kale.
            </div>
        </div>

        <div class="mt-5">
            <a href="/restaurants/<%= @restaurant[:id] %>/reviews/new" class="btn btn-dark">Add your review</a>
        </div>
    </div>

    <div class="col-sm-4">
        <h3>Location</h3>
        <p><%= @restaurant[:location] %></p>
        <h3>Phone</h3>
        <p><%= @restaurant[:phone] %></p>
        <h3>Total Reviews</h3>
        <p>?????</p>
    </div>
</div>
